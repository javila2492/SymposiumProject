<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="550.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scenes.GUIController">
   <children>
      <Pane layoutY="350.0" prefHeight="200.0" prefWidth="800.0" style="-fx-background-color: black;">
         <children>
            <ImageView id="icon" fx:id="icon" fitHeight="100.0" fitWidth="100.0" layoutX="350.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true" />
            <TextField id="type" fx:id="type" layoutX="14.0" layoutY="154.0" prefHeight="30.0" prefWidth="400.0" promptText="_" style="-fx-background-color: black; -fx-border-color: green; -fx-border-width: 2; -fx-text-fill: green;">
               <font>
                  <Font name="Courier New Bold" size="14.0" />
               </font>
            </TextField>
            <Button layoutX="414.0" layoutY="156.0" mnemonicParsing="false" onAction="#doAction" prefHeight="30.0" prefWidth="75.0" style="-fx-background-color: black;" text="Enter" textFill="GREEN">
               <font>
                  <Font name="Courier New Bold" size="14.0" />
               </font>
            </Button>
            <Label fx:id="invtext" layoutX="14.0" layoutY="50.0" prefHeight="100.0" prefWidth="300.0" textFill="#00c900" wrapText="true">
               <font>
                  <Font name="Courier New Bold" size="14.0" />
               </font>
            </Label>
            <Label layoutX="14.0" prefHeight="50.0" prefWidth="200.0" text="INVENTORY" textFill="#00c900" wrapText="true">
               <font>
                  <Font name="Courier New Bold" size="18.0" />
               </font>
            </Label>
            <ProgressBar fx:id="ragemeter" layoutX="586.0" layoutY="54.0" prefWidth="200.0" progress="0.0" style="-fx-background-color: black; -fx-border-color: black; -fx-accent: red;" visible="false" />
            <Label fx:id="ragetext" layoutX="636.0" layoutY="-25.0" prefHeight="100.0" prefWidth="100.0" text="RAGE" textFill="#c70000" visible="false" wrapText="true">
               <font>
                  <Font name="Courier New Bold" size="36.0" />
               </font>
            </Label>
            <Button layoutX="545.0" layoutY="157.0" mnemonicParsing="false" onAction="#dealDamage" text="DAMAGE" />
         </children>
      </Pane>
      <ImageView id="bgimg" fx:id="mapimg" fitHeight="350.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true" />
      <Label fx:id="showtext" layoutY="250.0" prefHeight="100.0" prefWidth="800.0" text="Nothing yet." textFill="#00c900" wrapText="true">
         <font>
            <Font name="Courier New Bold" size="14.0" />
         </font>
      </Label>
      <Label fx:id="roomname" layoutX="250.0" prefHeight="50.0" prefWidth="300.0" style="-fx-alignment: center;" textFill="#72e855">
         <font>
            <Font name="Courier New Italic" size="16.0" />
         </font>
      </Label>
      <Pane fx:id="damage" opacity="0.0" prefHeight="550.0" prefWidth="800.0" style="-fx-background-color: red;" visible="false" />
   </children>
</Pane>
